<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.education.platform.mapper.ClassApplicationMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.education.platform.entity.ClassApplication">
        <id column="id" property="id"/>
        <result column="student_id" property="studentId"/>
        <result column="student_name" property="studentName"/>
        <result column="class_id" property="classId"/>
        <result column="class_name" property="className"/>
        <result column="teacher_id" property="teacherId"/>
        <result column="teacher_name" property="teacherName"/>
        <result column="reason" property="reason"/>
        <result column="status" property="status"/>
        <result column="approval_comment" property="approvalComment"/>
        <result column="approval_time" property="approvalTime"/>
        <result column="deleted" property="deleted"/>
        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>
    </resultMap>

    <!-- 查询列 -->
    <sql id="Base_Column_List">
        id, student_id, student_name, class_id, class_name, teacher_id, teacher_name,
        reason, status, approval_comment, approval_time, deleted, created_at, updated_at
    </sql>

    <!-- 获取学生的申请列表 -->
    <select id="selectByStudentId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM class_application
        WHERE student_id = #{studentId}
        AND deleted = 0
        ORDER BY created_at DESC
    </select>

    <!-- 获取老师的待审核申请列表 -->
    <select id="selectPendingByTeacherId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM class_application
        WHERE teacher_id = #{teacherId}
        AND status = 0
        AND deleted = 0
        ORDER BY created_at DESC
    </select>

    <!-- 获取老师的所有申请列表 -->
    <select id="selectByTeacherId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM class_application
        WHERE teacher_id = #{teacherId}
        AND deleted = 0
        ORDER BY status ASC, created_at DESC
    </select>

</mapper>
